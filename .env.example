# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Chat ID where stats will be sent
TELEGRAM_CHAT_ID=-5181648888

# Steam Web API Key (get from https://steamcommunity.com/dev/apikey)
# Required for LFG notifications (detect when players launch Dota 2)
STEAM_API_KEY=your_steam_api_key_here

# OpenAI API Key (for /analyze, /copium - AI match analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative: use Russian proxy services (no VPN, pay in rubles):
# AITUNNEL: OPENAI_BASE_URL=https://api.aitunnel.ru/v1  + key from aitunnel.ru
# ProxyAPI:  OPENAI_BASE_URL=https://openai.api.proxyapi.ru/v1 + key from proxyapi.ru
# Rus-GPT:   OPENAI_BASE_URL=https://rus-gpt.com/api/v1 + key from rus-gpt.com
# OPENAI_MODEL=gpt-4o-mini  (check service docs for model names)

# OpenAI Model (optional, default: gpt-5.2)
# Options: gpt-4o-mini ($0.0006), gpt-4o ($0.01), gpt-5.2 ($0.01, best quality)
# OPENAI_MODEL=gpt-5.2

# Proxy for OpenAI (blocked in РФ). Optional.
# HTTPS_PROXY=http://host:8080
# HTTPS_PROXY=socks5://user:pass@host:1080
